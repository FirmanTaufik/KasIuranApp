<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipe"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_marginTop="50dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <RelativeLayout
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:drawableLeft="@drawable/ic_money"
                            android:textColor="@android:color/white"
                            android:text=" Total Tabungan "
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/textViewTotalTabungan"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/icon_kas"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@android:color/white"
                                android:text="Sisa Kas"
                                style="@style/TextAppearance.AppCompat.Title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/textViewTotalKas"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:layout_gravity="center_vertical"
                                style="@style/TextAppearance.AppCompat.Title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:drawableLeft="@drawable/ic_penarikan"
                            android:textColor="@android:color/white"
                            android:text=" Total Pengeluaran "
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/textViewTotalPengeluaran"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>



                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textViewDaftarAnggota"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/holo_blue_dark"
                    android:text="Daftar Anggota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:outlineSpotShadowColor="@color/colorKuning"
                    android:layout_gravity="center_vertical"
                    app:backgroundTint="@android:color/white"
                    android:tint="@android:color/holo_blue_dark"
                    android:src="@drawable/ic_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </FrameLayout>

            <FrameLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textViewPenarikanTabungan"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorKuning"
                    android:text="Penarikan Tabungan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:outlineSpotShadowColor="@color/colorKuning"
                    android:layout_gravity="center_vertical"
                    app:backgroundTint="@android:color/white"
                    android:tint="@color/colorKuning"
                    android:src="@drawable/ic_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </FrameLayout>

            <FrameLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textViewPengeluaranKas"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/holo_purple"
                    android:text="Pengeluaran Kas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:outlineSpotShadowColor="@color/colorKuning"
                    android:layout_gravity="center_vertical"
                    app:backgroundTint="@android:color/white"
                    android:tint="@android:color/holo_purple"
                    android:src="@drawable/ic_penarikan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </FrameLayout>

            <FrameLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textViewRekap"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/holo_green_dark"
                    android:text="Rekapitulasi Dana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:outlineSpotShadowColor="@color/colorKuning"
                    android:layout_gravity="center_vertical"
                    app:backgroundTint="@android:color/white"
                    android:tint="@android:color/holo_green_dark"
                    android:src="@drawable/ic_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </FrameLayout>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabLogOut"
            android:src="@drawable/ic_logout"
            android:layout_marginTop="50dp"
            android:layout_marginRight="40dp"
            app:backgroundTint="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabBayar"
            android:pointerIcon="arrow"
            android:tint="@android:color/white"
            app:backgroundTint="@color/colorPrimary"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/bayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>



</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>